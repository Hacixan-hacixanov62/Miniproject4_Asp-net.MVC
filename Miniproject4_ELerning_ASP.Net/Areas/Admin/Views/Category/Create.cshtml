@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}



<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Category Name</label>
                <input asp-for="Name" class="form-control" id="inputBlogTitle" placeholder="Name.." maxlength="100">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputCategoryName">Category Image</label>
                <input asp-for="Image" accept="image/*" class="form-control" id="inputCategoryName" placeholder="Category.." maxlength="100">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

