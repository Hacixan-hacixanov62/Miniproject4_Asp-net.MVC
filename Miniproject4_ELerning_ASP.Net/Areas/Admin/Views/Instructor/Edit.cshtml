@model InstructorEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Instructor FullName</label>
                <input asp-for="FullName" class="form-control" id="inputBlogTitle" placeholder="Title.." maxlength="100">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Instructor Field</label>
                <textarea asp-for="Field" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Field" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Instructor Address</label>
                <textarea asp-for="Address" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Instructor Email</label>
                <textarea asp-for="Email" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="image mb-5">
                <img src="~/img/@Model.Image" style="width:300px;height:200px" alt="" />
            </div>
            <div class="form-group">
                <label for="inputCategoryName">Instructor Image</label>
                <input asp-for="NewImage" accept="image/*" class="form-control" id="inputCategoryName" placeholder="Category.." maxlength="100">
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

