@model InstructorDetialVM
@{
    ViewData["Title"] = "Details";
}


<div class="card m-auto w-75">
    <div class="card-body">
        <h4 class="card-title">Information Detailed View</h4>
        <div class="d-flex">
            <div class="d-flex align-items-center text-muted font-weight-light">
                <i class="mdi mdi-clock icon-sm me-2"></i>
                <p><b>Cerated date:</b> @Model.CreatedDate</p>
            </div>
        </div>
        <div class="row">
            <img src="~/img/@Model.Image" style="width:250px" alt="...">
        </div>
        <div class="d-flex mt-5 align-items-top">
            <div class="mb-0 flex-grow">

                <p><b>FullName:</b> @Model.FullName</p>
                <p><b>Field:</b> @Model.Field</p>
                <p><b>Address:</b> @Model.Address</p>
                <p><b>Email:</b> @Model.Email</p>
            </div>
        </div>
    </div>
</div>

